                              <object class="GtkBox">
                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">dropped placeholder</property>
                                    <property name="hexpand">true</property>
                                  </object>
                                </child>
                              </object>
                            </property>
                          </object>
                        </child>
