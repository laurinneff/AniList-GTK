                            </property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="AdwViewSwitcherBar">
                        <property name="stack">anime_stack</property>
                        <binding name="reveal">
                          <lookup name="title-visible">anime_title</lookup>
                        </binding>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">manga</property>
