<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.2.1"/>
  <requires lib="libadwaita" version="1.0.0-alpha.2"/>
  <template class="AnilistGtkMainWindow" parent="AdwApplicationWindow">
    <property name="title" translatable="true">AniList-GTK</property>
    <property name="can-focus">False</property>
    <property name="default-width">1280</property>
    <property name="default-height">720</property>
    <property name="width-request">360</property>
    <property name="height-request">600</property>
    <child>
      <object class="AdwLeaflet" id="leaflet">
        <property name="can-swipe-back">true</property>
        <property name="can-swipe-forward">true</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="AdwHeaderBar">
                <binding name="show-end-title-buttons">
                  <lookup name="folded">leaflet</lookup>
                </binding>

                <child type="end">
                  <object class="GtkMenuButton">
                    <property name="icon-name">open-menu-symbolic</property>
                    <!--<property name="popover">app-menu</property>-->
                    <property name="menu-model">app-menu</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow">
                <child>
                  <object class="GtkListBox">
                    <property name="vexpand">true</property>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="spacing">12</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">system-search-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="true">Search</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="spacing">12</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">video-display-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="true">Anime</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">horizontal</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="spacing">12</property>
                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">accessories-dictionary-symbolic</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="true">Manga</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="hexpand">true</property>
            <property name="orientation">vertical</property>
            <child>
              <object class="AdwHeaderBar">
                <!--<property name="centering-policy">strict</property>-->
                <binding name="show-start-title-buttons">
                  <lookup name="folded">leaflet</lookup>
                </binding>
                <child type="title">
                  <object class="AdwViewSwitcherTitle" id="anime-title">
                    <property name="title" translatable="true">AniList-GTK</property>
                    <property name="subtitle">Anime</property>
                    <property name="stack">anime-stack</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="icon-name">go-previous-symbolic</property>

                    <binding name="visible">
                      <lookup name="folded">leaflet</lookup>
                    </binding>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkMenuButton">
                    <property name="icon-name">open-menu-symbolic</property>
                    <!--<property name="popover">app-menu</property>-->
                    <property name="menu-model">app-menu</property>

                    <binding name="visible">
                      <lookup name="folded">leaflet</lookup>
                    </binding>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkButton">
                    <property name="icon-name">system-search-symbolic</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwViewStack" id="anime-stack">
                <property name="vexpand">true</property>
                <child>
                  <object class="AdwViewStackPage">
                    <property name="name">watching</property>
                    <property name="title" translatable="true">Watching</property>
                    <property name="icon-name">media-playback-start-symbolic</property>
                    <property name="child">
                      <object class="GtkBox">
                        <child>
                          <object class="GtkLabel">
                            <property name="label">watching placeholder</property>
                            <property name="hexpand">true</property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="AdwViewStackPage">
                    <property name="name">completed</property>
                    <property name="title" translatable="true">Completed</property>
                    <property name="icon-name">object-select-symbolic</property>
                    <property name="child">
                      <object class="GtkBox">
                        <child>
                          <object class="GtkLabel">
                            <property name="label">completed placeholder</property>
                            <property name="hexpand">true</property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="AdwViewStackPage">
                    <property name="name">planning</property>
                    <property name="title" translatable="true">Planning</property>
                    <property name="icon-name">x-office-calendar-symbolic</property>
                    <property name="child">
                      <object class="GtkBox">
                        <child>
                          <object class="GtkLabel">
                            <property name="label">planning placeholder</property>
                            <property name="hexpand">true</property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="AdwViewStackPage">
                    <property name="name">rewatching</property>
                    <property name="title" translatable="true">Rewatching</property>
                    <property name="icon-name">media-playlist-repeat-symbolic</property>
                    <property name="child">
                      <object class="GtkBox">
                        <child>
                          <object class="GtkLabel">
                            <property name="label">rewatching placeholder</property>
                            <property name="hexpand">true</property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="AdwViewStackPage">
                    <property name="name">paused</property>
                    <property name="title" translatable="true">Paused</property>
                    <property name="icon-name">media-playback-pause-symbolic</property>
                    <property name="child">
                      <object class="GtkBox">
                        <child>
                          <object class="GtkLabel">
                            <property name="label">paused placeholder</property>
                            <property name="hexpand">true</property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="AdwViewStackPage">
                    <property name="name">dropped</property>
                    <property name="title" translatable="true">Dropped</property>
                    <property name="icon-name">media-playback-stop-symbolic</property>
                    <property name="child">
                      <object class="GtkBox">
                        <child>
                          <object class="GtkLabel">
                            <property name="label">dropped placeholder</property>
                            <property name="hexpand">true</property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwViewSwitcherBar">
                <property name="stack">anime-stack</property>
                <binding name="reveal">
                  <lookup name="title-visible">anime-title</lookup>
                </binding>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>

  <menu id='app-menu'>
    <section>
      <item>
        <attribute name='label'>Settings</attribute>
        <attribute name='action'>app.settings</attribute>
        <attribute name='accel'>&lt;Ctrl&gt;comma</attribute>
      </item>
      <item>
        <attribute name='label'>Log out</attribute>
        <attribute name='action'>app.logout</attribute>
      </item>
      <item>
        <attribute name='label'>Keyboard shortcuts</attribute>
        <attribute name='action'>app.accels</attribute>
        <attribute name='accel'>F1</attribute>
      </item>
      <item>
        <attribute name='label'>About AniList-GTK</attribute>
        <attribute name='action'>app.about</attribute>
      </item>
      <item>
        <attribute name='label'>Quit</attribute>
        <attribute name='action'>app.quit</attribute>
        <attribute name='accel'>&lt;Ctrl&gt;q</attribute>
      </item>
    </section>
  </menu>
</interface>
